<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/top_background1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <!-- Tiêu đề "Welcome Back" -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="229dp"
        android:layout_height="135dp"
        android:text="Welcome Back"
        android:textColor="@color/black"
        android:textSize="45sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="259dp" />

        <!-- Email Input -->

    <!-- Password Input -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="380dp"
        android:layout_height="59dp"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="12dp"
        android:hint="Email"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="411dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="380dp"
        android:layout_height="59dp"
        android:drawableStart="@drawable/password"
        android:drawablePadding="12dp"
        android:hint="Password"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        tools:layout_editor_absoluteX="15dp" />

        <!-- Nút đăng nhập -->

    <ImageButton
        android:id="@+id/btnLogin"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_arraw1"
        android:clipToOutline="true"
        android:scaleType="centerInside"
        tools:layout_editor_absoluteX="335dp"
        tools:layout_editor_absoluteY="552dp" />

        <!-- Nút đăng nhập Facebook -->

    <!-- Nút đăng nhập Google -->
    <Button
        android:id="@+id/btnFacebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:drawableLeft="@drawable/facebook"
        android:text="Facebook"
        app:layout_constraintMarginStart="32dp"
        app:layout_constraintMarginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPassword" />

    <!-- Đăng ký tài khoản -->

    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:drawableLeft="@drawable/google"
        android:text="Google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginEnd="32dp"
        app:layout_constraintMarginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/etPassword" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Are you new user? Register"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnFacebook" />


